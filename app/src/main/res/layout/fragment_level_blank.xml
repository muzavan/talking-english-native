<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="16dp"
    android:layout_marginRight="16dp"
    android:layout_marginTop="16dp"
    android:orientation="vertical">


    <TextView
        android:id="@+id/tv_question"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:text="She ___ a mother"
        android:textColor="@color/red_advanced"
        android:textSize="@dimen/h4_welcome_text"/>

    <TextView
        android:id="@+id/tv_translation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:text="Dia adalah seorang Ibu"
        android:textSize="@dimen/p_welcome_text"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:src="@drawable/sign_button"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Choose the right word"
        android:textSize="@dimen/p_welcome_text"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_help_text"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/background_circle"
            android:gravity="center"
            android:text="\?"
            android:textColor="@color/white"
            android:textSize="@dimen/h4_welcome_text"/>

        <TextView
            android:id="@+id/tv_instruction_hint"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_marginLeft="4dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="Pilih kata yang tepat"
            android:textSize="@dimen/p_welcome_text"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:gravity="center"
            android:background="@drawable/background_border_orange"
            android:text="Are"
            android:textSize="@dimen/p_welcome_text"
            android:textStyle="bold"
            android:textColor="@color/orange_intermediate"
            android:layout_height="match_parent"
            android:id="@+id/tv_answer_0"/>

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:gravity="center"
            android:background="@drawable/background_border_orange"
            android:text="Are"
            android:textSize="@dimen/p_welcome_text"
            android:textStyle="bold"
            android:textColor="@color/orange_intermediate"
            android:layout_height="match_parent"
            android:id="@+id/tv_answer_1"/>

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:gravity="center"
            android:background="@drawable/background_border_orange"
            android:text="Are"
            android:textSize="@dimen/p_welcome_text"
            android:textStyle="bold"
            android:textColor="@color/orange_intermediate"
            android:layout_height="match_parent"
            android:id="@+id/tv_answer_2"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="10dp">

        <TextView
            android:layout_width="0dp"
            android:layout_weight="0.5"
            android:gravity="center"
            android:textSize="@dimen/p_welcome_text"
            android:textStyle="bold"
            android:textColor="@color/orange_intermediate"
            android:layout_height="match_parent"/>

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:gravity="center"
            android:background="@drawable/background_border_orange"
            android:text="Are"
            android:textSize="@dimen/p_welcome_text"
            android:textStyle="bold"
            android:textColor="@color/orange_intermediate"
            android:layout_height="match_parent"
            android:id="@+id/tv_answer_3"/>

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:gravity="center"
            android:background="@drawable/background_border_orange"
            android:text="Are"
            android:textSize="@dimen/p_welcome_text"
            android:textStyle="bold"
            android:textColor="@color/orange_intermediate"
            android:layout_height="match_parent"
            android:id="@+id/tv_answer_4"/>

        <TextView
            android:layout_width="0dp"
            android:layout_weight="0.5"
            android:gravity="center"
            android:textSize="@dimen/p_welcome_text"
            android:textStyle="bold"
            android:textColor="@color/orange_intermediate"
            android:layout_height="match_parent"/>


    </LinearLayout>
</LinearLayout>
