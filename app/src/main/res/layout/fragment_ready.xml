<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:background="@color/fragment_welcome_background"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <TextView
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/fragment_welcome_top"
        android:layout_marginBottom="@dimen/fragment_welcome_bottom"
        android:text="@string/welcome_ready"
        android:id="@+id/tv_ready"
        android:textSize="@dimen/h1_welcome_text"
        android:gravity="center"
        android:textColor="#fff"
        android:layout_height="wrap_content"/>

    <TextView
        android:layout_width="match_parent"
        android:textSize="@dimen/h4_welcome_text"
        android:layout_marginBottom="@dimen/fragment_welcome_bottom"
        android:gravity="center"
        android:textColor="#fff"
        android:text="@string/ready_caption"
        android:layout_height="wrap_content"/>


    <ImageView
        android:layout_width="wrap_content"
        android:id="@+id/image_welcome"
        android:layout_gravity="center"
        android:src="@drawable/avatar_intro"
        android:layout_height="wrap_content"/>

    <EditText
        android:layout_width="match_parent"
        android:textSize="@dimen/p_welcome_text"
        android:layout_marginTop="@dimen/fragment_welcome_bottom"
        android:layout_marginBottom="@dimen/fragment_welcome_bottom"
        android:layout_marginLeft="60dp"
        android:layout_marginRight="60dp"
        android:gravity="center"
        android:id="@+id/edit_name"
        android:textColor="#fff"
        android:hint="Input your name here"
        android:textColorHint="#ddd"
        android:layout_height="wrap_content"/>

    <Button
        android:layout_width="match_parent"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:id="@+id/button_start"
        android:background="@color/white"
        android:text="Start >"
        android:layout_height="wrap_content"/>

</LinearLayout>