<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:background="@color/orange_intermediate"
              android:gravity="center_vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    
    <ImageView
        android:layout_marginTop="24dp"
        android:layout_width="match_parent"
        android:src="@drawable/badge"
        android:layout_height="200dp"/>

    <TextView
        android:layout_width="match_parent"
        android:textColor="@color/white"
        android:textSize="@dimen/h1_welcome_text"
        android:text="Get the Badge(s)!"
        android:id="@+id/tv_get_badge"
        android:gravity="center_horizontal"
        android:layout_height="wrap_content"/>

    <TextView
        android:layout_width="match_parent"
        android:textColor="@color/white"
        android:textSize="@dimen/p_welcome_text"
        android:text="Finish each topic in every levels\n and get as many badges \nas you can!"
        android:gravity="center_horizontal"
        android:layout_height="wrap_content"/>

</LinearLayout>