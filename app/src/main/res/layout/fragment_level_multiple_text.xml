<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/tv_word"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:text="Father"
            android:textColor="@color/red_advanced"
            android:textSize="@dimen/h4_welcome_text"/>

        <TextView
            android:id="@+id/tv_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:text="(n) kata benda"
            android:textSize="@dimen/p_welcome_text"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:id="@+id/image_sign"
            android:src="@drawable/sign_button"/>
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tv_question"
        android:textSize="@dimen/p_welcome_text"
        android:text="What is the antonym of it?"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_help_text"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/background_circle"
            android:gravity="center"
            android:text="\?"
            android:textColor="@color/white"
            android:textSize="@dimen/h4_welcome_text"/>

        <TextView
            android:id="@+id/tv_translation"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_marginLeft="4dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="Apa antomim (lawan kata) dari kata tersebut?"
            android:textSize="@dimen/p_welcome_text"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        android:layout_height="60dp">

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:id="@+id/tv_answer_0"
            android:textSize="@dimen/p_welcome_text"
            android:textColor="@color/green_beginner"
            android:gravity="center"
            android:alpha="0.6"
            android:text="He are a mother"
            android:layout_height="match_parent"/>


        <TextView
            android:layout_width="0dp"
            android:id="@+id/tv_answer_1"
            android:textSize="@dimen/p_welcome_text"
            android:textColor="@color/green_beginner"
            android:gravity="center"
            android:alpha="0.6"
            android:layout_weight="1"
            android:text="She is a mother"
            android:layout_height="match_parent"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        android:layout_height="60dp">

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:id="@+id/tv_answer_2"
            android:textSize="@dimen/p_welcome_text"
            android:textColor="@color/green_beginner"
            android:gravity="center"
            android:alpha="0.6"
            android:text="She are a mother"
            android:layout_height="match_parent"/>

        <TextView
            android:layout_width="0dp"
            android:id="@+id/tv_answer_3"
            android:layout_weight="1"
            android:textSize="@dimen/p_welcome_text"
            android:textColor="@color/green_beginner"
            android:gravity="center"
            android:alpha="0.6"
            android:text="He is a mother"
            android:layout_height="match_parent"/>

    </LinearLayout>
</LinearLayout>