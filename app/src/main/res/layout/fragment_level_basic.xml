<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="16dp"
    android:layout_marginRight="16dp"
    android:layout_marginTop="16dp"
    android:orientation="vertical">


    <TextView
        android:id="@+id/tv_word"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:text="Father"
        android:textColor="@color/red_advanced"
        android:textSize="@dimen/h4_welcome_text"/>

    <TextView
        android:id="@+id/tv_translation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:text="Ayah"
        android:textSize="@dimen/p_welcome_text"/>

    <TextView
        android:id="@+id/tv_type"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:text="(n) kata benda"
        android:textSize="@dimen/p_welcome_text"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:id="@+id/image_lip"
        android:src="@drawable/sign_button"/>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:background="@color/black"
        android:scaleType="fitCenter"
        android:src="@drawable/father_lipread"/>
</LinearLayout>
