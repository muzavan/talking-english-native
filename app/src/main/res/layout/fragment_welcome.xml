<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:background="@color/fragment_welcome_background"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <TextView
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/fragment_welcome_top"
        android:layout_marginBottom="@dimen/fragment_welcome_bottom"
        android:text="@string/welcome"
        android:textSize="@dimen/h1_welcome_text"
        android:gravity="center"
        android:textColor="#fff"
        android:layout_height="wrap_content"/>

    <ImageView
        android:layout_width="wrap_content"
        android:id="@+id/image_welcome"
        android:layout_gravity="center"
        android:src="@drawable/book_open"
        android:layout_height="wrap_content"/>

    <TextView
        android:layout_width="match_parent"
        android:textSize="@dimen/h4_welcome_text"
        android:id="@+id/tv_welcome_caption"
        android:layout_marginBottom="@dimen/fragment_welcome_bottom"
        android:gravity="center"
        android:textColor="#fff"
        android:text="@string/welcome_caption_0"
        android:layout_height="wrap_content"/>

    <TextView
        android:layout_width="match_parent"
        android:id="@+id/id_welcome_details"
        android:gravity="center_horizontal"
        android:layout_marginLeft="36dp"
        android:layout_marginRight="36dp"
        android:textSize="@dimen/p_welcome_text"
        android:textColor="#fff"
        android:text="@string/welcome_details_0"
        android:layout_height="wrap_content"/>

</LinearLayout>