<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="16dp"
    android:layout_marginRight="16dp"
    android:layout_marginTop="16dp"
    android:orientation="vertical">


    <TextView
        android:id="@+id/tv_question"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:text="She ___ a mother"
        android:textColor="@color/red_advanced"
        android:textSize="@dimen/h4_welcome_text"/>

    <TextView
        android:id="@+id/tv_translation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:text="Dia adalah seorang Ibu"
        android:textSize="@dimen/p_welcome_text"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:src="@drawable/sign_button"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Type the right word"
        android:textSize="@dimen/p_welcome_text"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginLeft="5dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_help_text"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/background_circle"
            android:gravity="center"
            android:text="\?"
            android:textColor="@color/white"
            android:textSize="@dimen/h4_welcome_text"/>

        <TextView
            android:id="@+id/tv_instruction_hint"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_marginLeft="4dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="Tuliskan kata yang tepat"
            android:textSize="@dimen/p_welcome_text"/>
    </LinearLayout>

    <EditText
        android:layout_width="match_parent"
        style="@style/EditTheme"
        android:textSize="@dimen/h4_welcome_text"
        android:layout_marginTop="32dp"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="32dp"
        android:hint="Your Answer"
        android:gravity="center"
        android:id="@+id/edit_answer"
        android:layout_height="wrap_content"/>


</LinearLayout>
